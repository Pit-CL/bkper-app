{
  "name": "bkper-app",
  "version": "1",
  "description": "Google Apps Script library for Bkper",
  "homepage": "https://bkper.com/api",
  "repository": {
    "type": "git",
    "url": "https://github.com/bkper/bkper-app.git"
  },
  "bugs": {
    "url": "https://github.com/bkper/bkper-issues/issues",
    "email": "support@bkper.com"
  },
  "author": {
    "name": "Mael",
    "url": "https://github.com/maelcaldas"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "open": "clasp open",
    "predts": "yarn remove @types/google-apps-script",
    "dts": "clasp-dts --out build",
    "postdts": "yarn add --dev @types/google-apps-script",
    "build": "tsc --skipLibCheck --sourcemap --outFile build/test-bundle.js --module system",
    "pretest": "yarn build",
    "test": "mocha --require source-map-support/register build/test-bundle.js",
    "docs": "typedoc ./build/google.script.run --ignoreCompilerErrors --excludeExternals --includeDeclarations --mode file --json build/apidocs.json ",
    "predocs:publish": "yarn docs",
    "docs:publish": "cp build/apidocs.json ../bkper-site/client/static/_data/ && cp ./build/google-apps-script.bkper/index.d.ts ../bkper-site/client/static/api/google-apps-script.bkper.d.ts",
    "postdocs:publish": "cp build/google-apps-script.bkper/index.d.ts ../bkper-sheets/server/@types/google-apps-script.bkper/index.d.ts",
    "docs:watch": "watch 'yarn docs && yarn run docs:publish' ./src",
    "prepush": "yarn run test",
    "push": "yarn clasp push",
    "api": "yarn --cwd ../bkper-pwa/api-typings-generator build --url http://app.bkper.com/_ah/api/discovery/v1/apis/bkper/v2/rest --out /Users/maelcaldas/git/bkper-app/@types"
  },
  "devDependencies": {
    "@google/clasp": "^2.2.1",
    "@types/chai": "^4.2.0",
    "@types/google-apps-script": "^0.0.59",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.15.0",
    "watch": "^1.0.2"
  },
  "dependencies": {}
}
