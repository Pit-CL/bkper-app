{
  "name": "@bkper/bkper-app",
  "version": "1.7.0",
  "description": "Google Apps Script library for Bkper",
  "homepage": "https://bkper.com/docs/#bkperapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/bkper/bkper-app.git"
  },
  "bugs": {
    "url": "https://github.com/bkper/bkper-app/issues",
    "email": "support@bkper.com"
  },
  "author": {
    "name": "bkper, Inc",
    "url": "https://bkper.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf build",
    "open": "clasp open",
    "push": "clasp push",
    "start": "yarn push --watch",
    "test": "run-s test:*",
    "test:bundle": "tsc --skipLibCheck --sourcemap --outFile build/test-bundle.js --module system",
    "test:run": "mocha --require source-map-support/register build/test-bundle.js",
    "build": "yarn && yarn clean && yarn test && run-s build:*",
    "build:types": "yarn clasp-types",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "preversion": "run-s test push",
    "publish-types": "yarn --cwd dist/@bkper/bkper-app-types publish --access public",
    "postversion": "clasp version $npm_package_version && git push && git push --tags && yarn publish-types"
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "chai": "^4.2.0",
    "clasp-types": "^1.1.4",
    "copyfiles": "^2.1.1",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.17.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@types/google-apps-script": "^0.0.59"
  }
}
