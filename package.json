{
  "name": "bkper-app",
  "version": "1",
  "description": "BkperApp Google Script library",
  "repository": "https://github.com/bkper/BkperApp",
  "author": "Bkper Inc.",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./docs",
    "docs": "./node_modules/.bin/jsdoc -c jsdoc.json && cp -rf ./docs/* ./dist/docs",
    "docs:publish": "yarn docs && cp -rf ./dist/docs/* ../bkper.github.io/",
    "clasp": "./node_modules/.bin/clasp",
    "start": "watch 'yarn run docs' ./ --ignoreDirectoryPattern=/dist/"
  },
  "devDependencies": {
    "@google/clasp": "^2.2.1",
    "better-docs": "^1.1.6",
    "copyfiles": "^2.1.1",
    "jsdoc": "^3.6.3",
    "watch": "^1.0.2"
  }
}
