{
  "name": "bkper-app",
  "version": "1",
  "description": "BkperApp Google Script library",
  "repository": "https://github.com/bkper/bkper-app",
  "author": "Bkper Inc.",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc --skipLibCheck --sourcemap --outFile dist/bundle.js --module system", 
    "test": "yarn build && mocha --require source-map-support/register dist/bundle.js",
    "docs": "./node_modules/.bin/typedoc ./@types/google-apps-script.bkper --ignoreCompilerErrors --excludeExternals --includeDeclarations --mode file --json dist/apidocs.json ",
    "docs:publish": "yarn docs && cp dist/apidocs.json ../bkper-site/client/static/_data/ && cp ./@types/google-apps-script.bkper/index.d.ts ../bkper-site/client/static/api/google-apps-script.bkper.d.ts",
    "postdocs:publish": "cp @types/google-apps-script.bkper/index.d.ts ../bkper-sheets/server/@types/google-apps-script.bkper/index.d.ts",
    "docs:watch": "watch 'yarn run docs:publish' ./@types/google-apps-script.bkper",
    "clasp": "./node_modules/.bin/clasp",
    "prepush": "yarn run test",
    "push": "yarn run clasp push",
    "api": "yarn --cwd ../bkper-pwa/api-typings-generator build --url http://app.bkper.com/_ah/api/discovery/v1/apis/bkper/v2/rest --out /Users/maelcaldas/git/bkper-app/@types"
  },
  "devDependencies": {
    "@google/clasp": "^2.2.1",
    "@types/chai": "^4.2.0",
    "@types/google-apps-script": "^0.0.56",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.15.0",
    "watch": "^1.0.2"
  },
  "dependencies": {}
}
