{
  "name": "bkper-app",
  "version": "1",
  "description": "BkperApp Google Script library",
  "repository": "https://github.com/bkper/bkper-app",
  "author": "Bkper Inc.",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "yarn run docs:json && yarn run types",
    "docs": "./node_modules/.bin/typedoc ./@types/bkper-app --ignoreCompilerErrors --excludeExternals --includeDeclarations --name 'BkperApp' --mode file",
    "docs:html": "yarn docs --out dist/docs --theme minimal --hideGenerator && cp -rf ./images/ ./dist/docs/images/",
    "docs:json": "yarn docs --json dist/apidocs.json ",
    "docs:publish": "yarn docs && cp -rf ./dist/docs/* ../bkper.github.io/",
    "clasp": "./node_modules/.bin/clasp",
    "types": "mkdir -p dist && mkdir -p dist/bkper-app && cp src/library/index.ts dist/bkper-app/index.d.ts",
    "push": "yarn run clasp push",
    "api": "yarn --cwd ../bkper-pwa/api-typings-generator build --url http://app.bkper.com/_ah/api/discovery/v1/apis/bkper/v2/rest --out /Users/maelcaldas/git/bkper-app/@types"
  },
  "devDependencies": {
    "@google/clasp": "^2.2.1",
    "@types/google-apps-script": "^0.0.56",
    "copyfiles": "^2.1.1",
    "typedoc": "^0.15.0"
  }
}
