{
  "name": "@bkper/bkper-app",
  "version": "1.0.0",
  "description": "Google Apps Script library for Bkper",
  "homepage": "https://bkper.com/api",
  "repository": {
    "type": "git",
    "url": "https://github.com/bkper/bkper-app.git"
  },
  "bugs": {
    "url": "https://github.com/bkper/bkper-issues/issues",
    "email": "support@bkper.com"
  },
  "author": {
    "name": "bkper, Inc",
    "url": "https://bkper.com"
  },
  "scripts": {
    "clean": "rimraf build",
    "open": "clasp open",
    "predts": "yarn remove @types/google-apps-script",
    "dts": "clasp-dts",
    "postdts": "yarn add --dev @types/google-apps-script",
    "test": "run-s test:*",
    "test:bundle": "tsc --skipLibCheck --sourcemap --outFile build/test-bundle.js --module system",
    "test:run": "mocha --require source-map-support/register build/test-bundle.js",
    "docs": "run-s docs:*",
    "docs:gen": "typedoc ./dist/google-apps-script.bkper --ignoreCompilerErrors --excludeExternals --includeDeclarations --mode file --json build/apidocs.json ",
    "docs:pub": "cp dist/apidocs.json ../bkper-site/client/static/_data/ && cp ./dist/index.d.ts ../bkper-site/client/static/api/google-apps-script.bkper.d.ts",
    "docs:deploy": "cp dist/* ../bkper-sheets/server/node_modules/bkper-app/",
    "watch": "watch 'yarn docs && yarn run docs:publish' ./src",
    "prepush": "yarn run test",
    "push": "clasp push"
  },
  "devDependencies": {
    "@google/clasp": "^2.2.1",
    "@types/chai": "^4.2.0",
    "@types/google-apps-script": "^0.0.59",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.15.0",
    "watch": "^1.0.2"
  },
  "dependencies": {},
  "keywords": [
    "google",
    "gsuite",
    "apps-script",
    "api",
    "google-apps-script",
    "typescript",
    "library",
    "ledger",
    "accounting",
    "bookkeeping"
  ]
}
