{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES3",
    "module": "none",
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "@types/**/*-tests.ts",
    "**/*.spec.ts"
  ]
}