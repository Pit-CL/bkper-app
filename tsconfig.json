{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES3",
    "module": "system",
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "outFile": "dist/bundle.js"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ],

}