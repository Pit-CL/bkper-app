{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES3",
    "module": "none",
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts", "BkperApp/GoogleAppsScript.ts", "@types/bkper-app/index.ts",
  ],
  "exclude": [
    "node_modules",
    "@types/**/*-tests.ts",
    "**/*.spec.ts",
    "dist/**/*"
  ]
}