{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES3",
    "module": "none",
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "dist",
    "outFile": "BkperApp"
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "@types/**/*-tests.ts",
    "**/*.spec.ts"
  ]
}